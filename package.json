{
  "name": "propaedeutic-reflection",
  "version": "0.5.1",
  "description": "Self reflection with anonymized peer insight.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "next dev",
    "build": "npx tsc",
    "migrate:deploy": "npx prisma migrate deploy",
    "test": "nyc mocha --recursive ./src/",
    "test:unit": "nyc mocha --recursive ./src/ -g 'Integration' -i",
    "test:integration": "nyc mocha --recursive ./src/ -g 'Integration'",
    "test:ci": "nyc mocha --recursive ./src/ --reporter mocha-junit-reporter"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "coverage",
      ".next",
      "next.config.js"
    ],
    "reporter": [
      "text",
      "html",
      "cobertura"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SalmonMode/propaedeutic-reflection"
  },
  "author": "Chris NeJame",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cookie": "^0.5.1",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "express": "^4.18.2",
    "mocha": "^10.1.0",
    "mocha-junit-reporter": "^2.2.0",
    "node-mocks-http": "^1.12.1",
    "nyc": "^15.1.0",
    "prisma": "^4.7.0",
    "sinon": "^14.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.7.0",
    "next": "^13.0.5",
    "next-auth": "^4.17.0"
  }
}
